<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.samis.biometrics.Controllers.Admin.ViewUsersController">
   <children>
      <Text layoutX="497.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0" text="View Users">
         <font>
            <Font name="Lato Black Italic" size="18.0" />
         </font>
      </Text>
      <TableView fx:id="viewUserTbl" layoutX="121.0" layoutY="113.0" prefHeight="416.0" prefWidth="851.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="43.0" text="ID" />
            <TableColumn fx:id="firstNameColumn" prefWidth="167.0" text="FirstName" />
            <TableColumn fx:id="lastNameColumn" prefWidth="167.0" text="LastName" />
            <TableColumn fx:id="userNameColumn" prefWidth="167.0" text="Username" />
            <TableColumn fx:id="passwordColumn" prefWidth="167.0" text="Password" />
            <TableColumn fx:id="categoryColumn" prefWidth="139.0" text="Category" />
        </columns>
      </TableView>
      <TextField fx:id="search_txtfld" layoutX="340.0" layoutY="75.0" prefHeight="26.0" prefWidth="524.0" promptText="Search...." />
      <Text layoutX="235.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Search Item:">
         <font>
            <Font name="Lato Black Italic" size="18.0" />
         </font>
      </Text>
       <Button fx:id="editButton" layoutX="595.0" layoutY="553.0" mnemonicParsing="false" onAction="#editUser" style="-fx-background-color: green;" text="Edit" textFill="WHITE">
           <font>
               <Font name="Lato Heavy" size="18.0" />
           </font>
       </Button>

       <Button fx:id="refreshButton" layoutX="470.0" layoutY="553.0" mnemonicParsing="false" onAction="#refreshButtonClicked" style="-fx-background-color: blue;" text="Refresh" textFill="WHITE">
           <font>
               <Font name="Lato Heavy" size="18.0" />
           </font>
       </Button>


   </children>
</AnchorPane>
